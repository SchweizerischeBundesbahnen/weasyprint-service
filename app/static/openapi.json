        "parameters": [
          {
            "name": "encoding",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "title": "Encoding",
              "description": "Text encoding used to decode the incoming HTML body (e.g., utf-8).",
              "default": "utf-8"
            },
            "description": "Text encoding used to decode the incoming HTML body (e.g., utf-8)."
          },
          {
            "name": "media_type",
            "in": "query",
