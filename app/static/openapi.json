{
  "openapi": "3.0.0",
  "info": {
    "title": "WeasyPrint Service API",
    "description": "HTML to PDF conversion API",
    "version": "1.0.0"
  },
  "paths": {
    "/version": {
      "get": {
        "summary": "Get version information",
        "responses": {
          "200": {
            "description": "Version information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "python": { "type": "string" },
                    "weasyprint": { "type": "string" },
                    "weasyprintService": { "type": "string" },
                    "timestamp": { "type": "string" },
                    "chromium": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/convert/html": {
      "post": {
        "summary": "HTML to PDF conversion",
        "parameters": [
          {
            "name": "encoding",
            "in": "query",
            "description": "Encoding for input HTML",
            "required": false,
            "schema": { "type": "string", "default": "utf-8" }
          },
          {
            "name": "media_type",
            "in": "query",
            "description": "Media type",
            "required": false,
            "schema": { "type": "string", "default": "print" }
          },
          {
            "name": "file_name",
            "in": "query",
            "description": "Output filename",
            "required": false,
            "schema": { "type": "string", "default": "converted-document.pdf" }
          },
          {
            "name": "pdf_variant",
            "in": "query",
            "description": "PDF variant",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "presentational_hints",
            "in": "query",
            "description": "Use presentational hints",
            "required": false,
            "schema": { "type": "boolean", "default": false }
          },
          {
            "name": "base_url",
            "in": "query",
            "description": "Base URL",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "text/html": {
              "schema": { "type": "string" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
